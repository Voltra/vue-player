{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"baseUrl": "src",
		"declaration": false,
		"inlineSourceMap": false,
		"lib": ["esnext"],
		"listEmittedFiles": false,
		"listFiles": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"traceResolution": false
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src"]
}
